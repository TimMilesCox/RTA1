
;	_NAMES of ports as referenced in implementation or emulation 

_CORE_PIN		equ	73*4	; read-only port 1 */ _CORE_SOCKET

_XI_PENDING		equ	74*4	; mask of external interrupt sources
_XI_ACK			equ	75*4	; writeable ack to quench pending signals
_INCREMENTER_RESTART	equ	76*4
_CORE_SOCKET		equ	77*4	; socket index this core read only

_MCAST_PENDING		equ	78*4	; mask of cores which have multicast to here
_MCAST_TO		equ	79*4	; -> latent parameter
					; destinations mask in register k
_STEPPING		equ	100*4
_TZONE			equ	101*4

_APP_THRESHOLD		equ	72*4	; lowest application code page / limit ISRs
_INDICATE		equ	102*4	; control commands powersave + others
_CHILLDOWN		equ	103*4	; powersave microseconds

_SYS_SWITCH		equ	126*4	; if a switch block is connected
_SYS_LEDS		equ	127*4	; if a LEDs block is connected

_DEVICE			equ	128*4	; descriptors 64 devices starting executable space
_RAM_THRESHOLD		equ	124*4	; 1st writeable page executable space
_IFRAME_U		equ	64*4	; highest page instruction frame B0 + iframe pages - 1

_I_DATA			equ	80*4	; external data read port
_O_DATA			equ	88*4	; external daza write port

_CORES_MASK		equ	125*4	; bit map cores present +(1*/RTA_SMP)-1
