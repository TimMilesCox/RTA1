"$$aside"	$set	1

p		$proc
"$aax"*		$name

f       $func
"$iii"* $name
	$if	$$significands>24
"$iiw"** $set	48
pointer	$equf	(f(1:):L)
	$else
"$iiw"** $set   imeasure(f(1:))
	$sterm	':'
	$do	$o('C'),	$sterm	'.'
pointer $equf   (f(1:))
	$endif
        $return pointer
        $end

"$u"		$set	p(1, 1)		. drop any indirection bit
"$ix"		$set	p(0, 2)
"$iy"		$set	$ix**1

		$if	($t(p(1, 3))=$name)**(p(1, 3)=111)
		p(1,3)	p(1, 1), p(1, 2)
"$aaa"*		$equf	fp$aside($$aside)
		$elseif	p(1, *1)**(p(1, 2)^=0)

		$if	$ix**x
		lx++$iy	$u, p(1, 2)
"$aaa"*		$equf	0, $ix
		$else
		lr++$iy	$u, p(1, 2)
"$aaa"*		$equf	*$ix
		$endif

		$elseif	p(1, *1)**($net($u)>8191)

		$if	$ix**x
		$if	$u>32767
		lx++$iy	*(+($u)s)
		$else
		lx++$iy	$u
		$endif
"$aaa"*		$equf	0, $ix
		$else
		$if	$u>32767
		lr++$iy	*(+($u)s)
		$else
		lr++$iy	$u
		$endif
"$aaa"*		$equf	*$ix
		$endif

		$elseif	($net($u)>32767)**(p(1, 2)=0)**(p(1, *1)=0)

		$if	$ix**x
		lx++$iy	$0(+($u)s)
"$aaa"*		$equf	0, $ix
		$else

"$aaa"*		$equf	*$0(+($u)s)
		$endif

		$else

"$aaa"*		$equf	p(1)
		$endif

		$end

