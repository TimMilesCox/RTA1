
if	[ -z "$RTA_BINARY" ]
then
echo	export RTA_BINARY=directory-for-new-binaries \
	in your shell profile
echo	and add \$RTA_BINARY to \$PATH
exit	0
fi

if	[ ! -d "$RTA_BINARY" ]
then
mkdir	"$RTA_BINARY"
fi

pushd ../netifx
gcc -m32 -c -funsigned-char -o ../emulator.rel/argue.o argue.c
popd

if [[ "$1" == "powerpc" || "$1" == "sparc" ]]
then
BE=-UINTEL
echo	platform $1
else
BE=-DINTEL
echo	platform little-endian
fi

if [ "$2" == "linux" ]
then
OS=-DLINUX
echo	image for Linux
else
OS=-DOSX
echo	image for OSX
fi

gcc -m32 -funsigned-char $BE $OS -o $RTA_BINARY/i	\
			../emulator.rel/argue.o i.c

